<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edt_custom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ln_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_transcript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello world!!!"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empty notes..."
                android:textColor="@color/appcolor" />

            <TextView
                android:id="@+id/txt_timeSaved"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txt_videoId"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txt_startAt"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txt_endAt"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/img_practice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_microphone_small" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>