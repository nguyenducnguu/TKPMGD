<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.ute.dn.speaknow.fragments.MainOfflineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txt_video_path"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Tap to choose file..."
                android:inputType="text"
                android:textColor="@color/white"
                android:background="@drawable/edt_custom_right"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/txt_removeVideo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edt_custom_left"
                android:text="x"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transcript"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txt_transcript_path"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Tap to choose file..."
                android:inputType="text"
                android:textColor="@color/white"
                android:background="@drawable/edt_custom_right"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/txt_removeTranscript"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edt_custom_left"
                android:text="x"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_custom"
            android:text="Ok"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>
